<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Viva de Contabilidade</title>
    
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>

    
    
  
   

    <nav  class="navbar navbar-light" style="background-color: #ffffff;">

        <a class="navbar-brand" href="/cliente/novo">
            <img class="logonav" src="/public/img/logo.jpg">
        </a>
        <a href="/cliente/novo"> <button id="btnnovocad" class="btn btn-outline-success" type="submit"> Novo Cadastro</button></a>
        
    </nav>
    <div class="container">
    <div class="card-header">
       

        <form method="POST" action="/buscar/:clients_id">
            <input  name="busca" id="searchinput" class="form-control me-0" type="search" placeholder="Nome ou Email" aria-label="Search" required>
            <button  name="busca" id="btnsearch" class="btn btn-outline-info" type="submit">Buscar</button>
        </form>
        <div class="card-title"> <h2>Lista de Clientes</h2></div>
     </div>
    
    </div>
    <% clientes.forEach(cliente =>{%>
    
    <div class="container">
        <div class="card" id="form-cadastro">
           
            <div class="card-body">

                
                <form method="POST" action="/delete" class="resume">
                    <div class="container">
                        
                    </div>
                    <div class="divimgperfil">
                        <img class="imgperfil" src=<%= cliente.foto %> alt="logo">
                    </div>
                    <div class="dados">
                        <label for="nome">Nome Completo:</label>
                        <label for="nome"> <%= cliente.nome %></label> <br>
                    </div>    
              
                     <div class="dados">        
                        <label for="email">Email:</label>
                        <label for="email"> <%= cliente.email %></label> <br>
                    </div>      
                  
                    <div class="dados">
                        <label for="data">Tempo de Cadastro: </label>
                        <label for="datacadastro"><%= cliente.dataCadastro %></label><br>
                    </div>
               
                    <div class="dados">
                        <label for="dataAtualizacao">Data de Atualização: </label>
                        <label for="dataupdate"><%= cliente.dataAtualizacao %></label> <br>
                        
                     </div>
                    

                     <div class="dados">
                        <input name="id" type="hidden" class="form-control datas" id="id" value=<%= cliente.id %>>
                        
                        <button  onclick="confirmacao()"  type="submit" type="button" id="excluir" class="btn btn-outline-danger">Excluir</button>  
                        <a href="/cliente/<%=cliente.id%>/editar"><button type="button" id="editar"  class="btn btn-outline-primary">Editar</button></a>
                    </div>
                        <p type="hidden" id="demo"></p>
                    </form>
            <div class="div-icons" >
                
               
                <div class="space"></div>
            </div>

            
           
            
            </div>           
        </div>
       
    </div>
    <% }) %>
   
</body>

